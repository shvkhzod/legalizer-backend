{
  "name": "legalizer-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Charity Compliance Checker",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node migrate.js",
    "db:init": "psql -U postgres -f src/db/init.sql",
    "db:schema": "psql -U postgres -d charity_compliance -f src/db/schema.sql"
  },
  "keywords": [
    "fastify",
    "postgresql",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.0",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.11.10",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fast-jwt": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1"
  }
}
